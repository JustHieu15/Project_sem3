@model IEnumerable<AspnetCoreMvcStarter.Models.User>
@using AspnetCoreMvcStarter.Models

@{
    ViewData["Title"] = "User List";
    var currentUserRole = HttpContext.Session.GetString("UserRole");
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Danh Sách Người Dùng</h4>
            @if (currentUserRole == UserRole.Admin.ToString())
            {
                <a asp-action="Create" class="btn btn-success btn-sm">
                    <i class="fas fa-plus"></i> Tạo người dùng mới
                </a>
            }
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Họ và Tên</th>
                            <th>Email</th>
                            <th>Chức vụ</th>
                            <th>Phòng ban</th>
                            <th>Số điện thoại</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.Name</td>
                                    <td>@user.Email</td>
                                    <td>@user.Role.GetDisplayName()</td>
                                    <td>@(user.Department?.Name ?? "N/A")</td>
                                    <td>@(user.Phone ?? "N/A")</td>
                                    <td>@(user.IsActive ? "Hoạt động" : "Không hoạt động")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        @if (currentUserRole == UserRole.Admin.ToString())
                                        {
                                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Xóa
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">Không có người dùng nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
