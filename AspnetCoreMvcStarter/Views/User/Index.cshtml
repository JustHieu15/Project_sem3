@model IEnumerable<AspnetCoreMvcStarter.Models.User>
@using AspnetCoreMvcStarter.Models

@{
    ViewData["Title"] = "User Management";
    // Lấy thông tin người dùng hiện tại từ Session
    var currentUserId = ViewContext.HttpContext.Session.GetInt32("UserId");
    var currentUserRole = ViewContext.HttpContext.Session.GetString("UserRole");
    bool isAdmin = currentUserRole == UserRole.Admin.ToString();
}

<h2 style="text-align:center">Quản Lý Người Dùng</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (isAdmin) // Chỉ Admin mới thấy nút tạo mới
{
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm người dùng mới
        </a>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Họ và Tên</th>
                <th>Email</th>
                <th>Chức vụ</th>
                <th>Phòng ban</th> @* Thêm cột phòng ban *@
                <th>Trạng thái</th> @* Thêm cột trạng thái *@
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.Role == UserRole.Leader)
                            {
                                <span class="badge bg-primary">@Html.DisplayFor(modelItem => user.Role)</span>
                            }
                            else if (user.Role == UserRole.Admin)
                            {
                                <span class="badge bg-danger">@Html.DisplayFor(modelItem => user.Role)</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => user.Role)</span>
                            }
                        </td>
                        <td>@(user.Department?.Name ?? "N/A")</td> @* Hiển thị tên phòng ban *@
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Không hoạt động</span>
                            }
                        </td>
                        <td>
                            @if (isAdmin || currentUserId == user.Id) // Admin hoặc chính user đó
                            {
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning" title="Sửa">
                                    <i class="fas fa-edit">Sửa</i>
                                </a>
                            }
                            @if (isAdmin && currentUserId != user.Id) // Chỉ Admin và không phải chính mình
                            {
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger ms-1" title="Xóa">
                                    <i class="fas fa-trash">Xóa</i>
                                </a>
                            }
                            @* Nút xem chi tiết nếu cần *@
                            @*
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info ms-1" title="Chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>
                            *@
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">Không có người dùng nào trong hệ thống</td>
                </tr>
            }
        </tbody>
    </table>
</div>
