@model AspnetCoreMvcStarter.Models.User

@{
    ViewData["Title"] = "Create User";
}

<h2 style="text-align:center">Tạo Người Dùng Mới</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name">Họ và Tên</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Mật khẩu</label>
        <input asp-for="Password" type="password" class="form-control" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Role">Chức vụ</label>
        <select asp-for="Role" class="form-control" required>
            <option value="">-- Chọn chức vụ --</option>
            <option value="Trưởng Bộ Phận">Trưởng Bộ Phận</option>
            <option value="Nhân viên">Nhân viên</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address">Địa chỉ</label>
        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone">Số điện thoại</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Tạo người dùng</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại danh sách</a>
</form>

