@model AspnetCoreMvcStarter.Models.User
@using AspnetCoreMvcStarter.Models

@{
    ViewData["Title"] = "Chỉnh sửa Người dùng";
    var currentUserRole = ViewContext.HttpContext.Session.GetString("UserRole");
    bool isAdmin = currentUserRole == UserRole.Admin.ToString();
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-warning text-dark"> @* Thay đổi màu header *@
            <h4 class="mb-0">Chỉnh sửa Thông tin Người dùng: @Model.Name</h4>
        </div>
        <div class="card-body" style="margin-top: 20px">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post"> @* asp-route-id *@
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" /> @* Thêm input ẩn cho Id *@
                <input type="hidden" asp-for="CreatedDate" /> @* Giữ lại CreatedDate *@
                @if(!isAdmin) { <input type="hidden" asp-for="Role" /> <input type="hidden" asp-for="IsActive" /> } @* Nếu không phải admin, giữ lại Role và IsActive hiện tại *@


                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Họ và Tên</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="newPassword" class="form-label fw-semibold">Mật khẩu mới (để trống nếu không đổi)</label>
                            <input name="newPassword" id="newPassword" type="password" class="form-control" />
                            @* Không cần validation cho newPassword ở đây, vì nó là tùy chọn *@
                        </div>
                    </div>
                    @if (isAdmin) // Chỉ hiển thị cho Admin
                    {
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Role" class="form-label fw-semibold">Chức vụ</label>
                                <select asp-for="Role" asp-items="Html.GetEnumSelectList<UserRole>()" class="form-select">
                                    <option value="">-- Chọn chức vụ --</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>
                    }
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="DepartmentId" class="form-label fw-semibold">Phòng ban</label>
                            <select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.Departments" class="form-select">
                                <option value="">-- Chọn phòng ban --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold">Số điện thoại</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                 @if (isAdmin) // Chỉ hiển thị cho Admin
                {
                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Kích hoạt tài khoản</label>
                        </div>
                    </div>
                }


                <div class="form-group mb-3">
                    <label asp-for="Address" class="form-label fw-semibold">Địa chỉ</label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-warning"> @* Thay đổi màu nút *@
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

