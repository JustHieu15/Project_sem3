@model AspnetCoreMvcStarter.Models.User
@using AspnetCoreMvcStarter.Models

@{
  ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-danger text-white">
      <h4 class="mb-0">Xóa Người Dùng: @Model.Name</h4>
    </div>
    <div class="card-body">
      @if (TempData["Error"] != null)
      {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          @TempData["Error"]
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      }

      <h5>Bạn có chắc muốn xóa người dùng này?</h5>
      <dl class="row">
        <dt class="col-sm-3">Họ và Tên</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Chức vụ</dt>
        <dd class="col-sm-9">@Model.Role.GetDisplayName()</dd>

        <dt class="col-sm-3">Phòng ban</dt>
        <dd class="col-sm-9">@(Model.Department?.Name ?? "N/A")</dd>
      </dl>

      <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
          <i class="fas fa-trash"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
          <i class="fas fa-arrow-left"></i> Hủy
        </a>
      </form>
    </div>
  </div>
</div>
