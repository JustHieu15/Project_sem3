@model AspnetCoreMvcStarter.Models.KpiTask
@using AspnetCoreMvcStarter.Models

@{
    ViewData["Title"] = "Create KPI Task";
    var currentUserRole = Context.Session.GetString("UserRole");
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Giao Việc KPI Mới</h4>
        </div>
        <div class="card-body" style="margin-top: 20px;">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="TaskContent" class="form-label fw-semibold"></label>
                            <textarea asp-for="TaskContent" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="TaskContent" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="DocumentNumber" class="form-label fw-semibold"></label>
                            <input asp-for="DocumentNumber" type="number" class="form-control" min="1" />
                            <span asp-validation-for="DocumentNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="RequiredDays" class="form-label fw-semibold"></label>
                            <input asp-for="RequiredDays" type="number" class="form-control" min="1" />
                            <span asp-validation-for="RequiredDays" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ProposedPoints" class="form-label fw-semibold"></label>
                            <!-- ĐÃ SỬA: Xóa thuộc tính asp-for="number" sai -->
                            <input asp-for="ProposedPoints" type="number" class="form-control" min="0" />
                            <span asp-validation-for="ProposedPoints" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="StartDate" class="form-label fw-semibold"></label>
                            <!-- ĐÃ SỬA: Xóa thuộc tính asp-for="date" sai -->
                            <input asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="EndDate" class="form-label fw-semibold"></label>
                            <input type="date" asp-for="EndDate" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ResponsibleLeader" class="form-label fw-semibold"></label>
                    <input asp-for="ResponsibleLeader" class="form-control" />
                    <span asp-validation-for="ResponsibleLeader" class="text-danger"></span>
                </div>

                <!-- ĐÃ SỬA: Tham chiếu đúng enum UserRole -->
                @if (currentUserRole == UserRole.Admin.ToString() || currentUserRole == UserRole.Leader.ToString())
                {
                    <div class="form-group mb-3">
                        <label asp-for="AssignedUserId" class="form-label fw-semibold">Người được giao</label>
                        <select asp-for="AssignedUserId" asp-items="ViewBag.AssignedUserId" class="form-select">
                            <option value="">-- Chọn người dùng --</option>
                        </select>
                        <span asp-validation-for="AssignedUserId" class="text-danger"></span>
                    </div>
                }

                <div class="mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Tạo công việc
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div> <!-- Đóng thẻ div bị thiếu -->
