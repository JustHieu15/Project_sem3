@model IEnumerable<AspnetCoreMvcStarter.Models.Department>
@using AspnetCoreMvcStarter.Models

@{
    ViewData["Title"] = "Department Management";
    // Lấy thông tin người dùng hiện tại từ Session
    var currentUserRole = ViewContext.HttpContext.Session.GetString("UserRole");
    bool isAdmin = currentUserRole == UserRole.Admin.ToString();
}

<h2 style="text-align:center">Quản Lý Phòng Ban</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (isAdmin)
{
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm phòng ban mới
        </a>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Code)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var department in Model)
                {
                    <tr>
                        <td>@department.Id</td>
                        <td>@department.Name</td>
                        <td>@department.Code</td>
                        <td>@(department.Description ?? "N/A")</td>
                        <td>@department.CreatedDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (isAdmin)
                            {
                                <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-sm btn-warning" title="Sửa">
                                    <i class="fas fa-edit">Sửa</i>
                                </a>
                                <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-sm btn-info ms-1" title="Chi tiết">
                                    <i class="fas fa-eye">Chi tiết</i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-sm btn-danger ms-1" title="Xóa">
                                    <i class="fas fa-trash">Xóa</i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Không có phòng ban nào trong hệ thống</td>
                </tr>
            }
        </tbody>
    </table>
</div>
