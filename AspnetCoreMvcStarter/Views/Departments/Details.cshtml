@model AspnetCoreMvcStarter.Models.Department
@using AspnetCoreMvcStarter.Models

@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Chi Tiết Phòng Ban: @Model.Name</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id)</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Code)</dt>
                <dd class="col-sm-9">@(Model.Code ?? "N/A")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@(Model.Description ?? "N/A")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedDate)</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Người dùng</dt>
                <dd class="col-sm-9">
                    @if (Model.Users != null && Model.Users.Any())
                    {
                        <ul>
                            @foreach (var user in Model.Users)
                            {
                                <li>@user.Name (@user.Email)</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Không có người dùng nào trong phòng ban này.</span>
                    }
                </dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Sửa
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">
                    <i class="fas fa-trash"></i> Xóa
                </a>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
