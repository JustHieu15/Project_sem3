@model AspnetCoreMvcStarter.Models.User

@{
    ViewData["Title"] = "Xóa khách hàng";
}

<h2>Bạn có chắc chắn muốn xóa khách hàng này không?</h2>

<div>
    <p><strong>Tên:</strong> @Model.Name</p>
    <p><strong>Địa chỉ:</strong> @Model.Address</p>
    <p><strong>Điện thoại:</strong> @Model.Phone</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
