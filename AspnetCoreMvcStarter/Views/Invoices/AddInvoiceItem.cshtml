@model AspnetCoreMvcStarter.Models.Invoices

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<h2>Chi tiết hóa đơn</h2>

<table class="table">
    <tr><th>ID</th><td>@Model.Id</td></tr>
    <tr><th>Số điện thoại</th><td>@Model.CustomerPhoneNumber</td></tr>
    <tr><th>Mã Barcode</th><td>@Model.BarCode</td></tr>
    <tr><th>Tổng tiền</th><td>@Model.TotalAmount VNĐ</td></tr>
</table>

<h3>Thêm mục vào hóa đơn</h3>
<form asp-action="AddInvoiceItem" method="post">
    <input type="hidden" name="InvoiceId" value="@Model.Id" />

    <div class="form-group">
        <label for="ItemName">Tên mặt hàng</label>
        <input type="text" id="ItemName" name="ItemName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Quantity">Số lượng</label>
        <input type="number" id="Quantity" name="Quantity" class="form-control" min="1" required />
    </div>

    <div class="form-group">
        <label for="Weight">Khối lượng (kg)</label>
        <input type="number" id="Weight" name="Weight" class="form-control" step="0.01" min="0" />
    </div>

    <button type="submit" class="btn btn-primary">Thêm vào hóa đơn</button>
</form>

<h3 class="mt-4">Danh sách mặt hàng</h3>
<table class="table">
    <thead>
        <tr>
            <th>Tên mặt hàng</th>
            <th>Số lượng</th>
            <th>Khối lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InvoicesItems)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.Weight kg</td>
            </tr>
        }
    </tbody>
</table>
