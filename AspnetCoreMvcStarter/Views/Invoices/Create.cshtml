@model AspnetCoreMvcStarter.Models.Invoices
@{
    ViewData["Title"] = "Tạo hóa đơn";
}

<h2>Tạo hóa đơn</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CustomerPhoneNumber">Số điện thoại khách hàng</label>
        <input type="text" id="CustomerPhoneNumber" name="CustomerPhoneNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="CustomerName">Tên khách hàng</label>
        <input type="text" id="CustomerName" name="CustomerName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="CustomerAddress">Địa chỉ khách hàng</label>
        <input type="text" id="CustomerAddress" name="CustomerAddress" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="BarCode">Mã Barcode</label>
        <input type="text" id="BarCode" name="BarCode" class="form-control" required />
        <button type="button" class="btn btn-primary mt-2" onclick="generateBarcode()">Tạo Barcode</button>
        <div class="mt-3">
            <img id="barcodeImage" src="" alt="Barcode sẽ hiển thị ở đây" style="display:none; border: 1px solid #ddd; padding: 10px;" />
        </div>
    </div>

    <div class="form-group">
        <label for="ServicesId">Chọn dịch vụ</label>
        <select id="ServicesId" name="ServicesId" class="form-control">
            @foreach (var service in ViewBag.Services)
            {
                <option value="@service.Id">@service.Name - @service.Price VNĐ</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Tạo hóa đơn</button>
</form>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
            $(document).ready(function () {
        $("#CustomerPhoneNumber").on("keydown", function (e) {
            if (e.key === "Enter") {
                e.preventDefault(); // Ngăn chặn việc reload form khi nhấn Enter
                fetchCustomerInfo();
            }
        });
    });

      function fetchCustomerInfo() {
        var phone = $("#CustomerPhoneNumber").val();
        if (phone.length > 0) {
            $.ajax({
                url: "/Invoices/GetCustomerByPhone",
                type: "GET",
                data: { phoneNumber: phone },
                success: function (response) {
                    if (response.success) { // Không cần response.data vì dữ liệu nằm trực tiếp trong response
                        $("#CustomerName").val(response.name || "Không có dữ liệu");
                        $("#CustomerAddress").val(response.address || "Không có dữ liệu");
                    } else {
                        alert("Không tìm thấy khách hàng!");
                    }
                },
                error: function (xhr, status, error) {
                    alert("Lỗi khi tìm khách hàng! " + error);
                }
            });
        }
    }


        function generateBarcode() {
            var barcode = $("#BarCode").val();
            if (barcode.length > 0) {
                $("#barcodeImage").attr("src", "/Invoices/GenerateBarcode?barcode=" + barcode).show();
            } else {
                alert("Vui lòng nhập mã barcode trước!");
            }
        }
    </script>

