@model AspnetCoreMvcStarter.Models.Services

@{
    ViewData["Title"] = "Service Details";
}

<h2 style="text-align:center">Service Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("N0") VNƒê</p>
        <p class="card-text"><strong>Status:</strong> @(Model.Status == 1 ? "Active" : "Inactive")</p>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
